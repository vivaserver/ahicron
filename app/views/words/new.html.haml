.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), words_path
      %li.active= link_to t("web-app-theme.new", :default => "New"), new_word_path
  .content
    %h2.title #{ t("web-app-theme.new", :default => "New")} Word
    .inner
      - form_for @word, :url => words_path, :html => { :class => :form } do |f|
        = f.error_messages
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
