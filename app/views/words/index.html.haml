.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", words_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_word_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Words
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.word.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @words.each do |word|
          %tr{:class => cycle("odd", "even")}
            %td= word.id
            %td= link_to word.name, word_path(word)
            %td= word.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), word_path(word)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_word_path(word)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), word_path(word), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
        
- content_for :sidebar, render(:partial => 'sidebar')